    <style>
        body {
            padding: 0;
            margin: 0;
        }
        .lotterybox{
            height: 100%;
        }
    </style>
</head>

<body>
    <div class="container-fluid" style="padding: 0 0 ">
        <div class="row-fluid">
            <span>nianhui</span>
        </div>
        <div class="row-fluid">
            <div class="lotterybox"></div>
        </div>
    </div>
    
    <!-- Zepto or jQuery/lottery/stylesheets/style.css -->
    <script src="/lottery/javascripts/zepto.min.js"></script>
    <link rel="stylesheet" href="/lottery/stylesheets/lottery.min.css" />
    <script src="/lottery/javascripts/lottery.compact.min.js"></script>

    <!-- ROCK ON -->
    <script>
        $(function(){
            $.ajax({
              url: '/lottery/getheadimgdata', 
              async: true,
              dataType: 'json',
              type: 'GET',
              success: function(result){
                console.log('ajax success')
                console.log(result)
                if(result.errCode == 0){
                    $.lottery({
                        el: '.lotterybox',
                        //api: './sample-data.json',
                        once: false, // winner can not repeatable
                        subtitle: "xueyuan",
                        // desc: "title",
                        timeout: 10,
                        confetti: true, // show confetti effects
                        speed: 200, // interval time to next candidate, the unit is ms
                        number: 1,// how many winner will be get at one time
                        data:result.data
                    });
                }
              },
              error: function(e){
                console.log(e)
                console.log("error");
              },
          })
        })
    </script>
</body>
</html>