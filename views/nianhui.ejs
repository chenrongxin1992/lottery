    <!-- Bootstrap -->
    <link rel='stylesheet' href='/lottery/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/lottery/stylesheets/style.css' />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
